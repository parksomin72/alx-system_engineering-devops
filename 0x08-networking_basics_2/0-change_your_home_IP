#!/bin/bash

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Replace the entries for localhost and facebook.com
sudo sed -i 's/^127.0.0.1[[:space:]]\+localhost$/127.0.0.2 localhost/' /etc/hosts
sudo sed -i 's/^157.240.11.35[[:space:]]\+facebook.com$/8.8.8.8 facebook.com/' /etc/hosts

# Verify the changes
ping localhost
ping facebook.com

echo "Changes have been applied. Reverting to original configuration..."
# Revert to the original hosts file
sudo mv /etc/hosts.bak /etc/hosts

# Verify the changes are reverted
ping localhost
ping facebook.com
